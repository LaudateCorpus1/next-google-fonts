{
  "private": true,
  "name": "root",
  "scripts": {
    "build": "lerna exec -- microbundle --jsx React.createElement --tsconfig tsconfig.json",
    "commit": "git-cz"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,yml}": "prettier --write"
  },
  "devDependencies": {
    "@types/node": "14.6.4",
    "@types/react": "16.9.49",
    "commitizen": "4.2.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "4.3.0",
    "lerna": "^3.15.0",
    "lint-staged": "10.3.0",
    "microbundle": "0.12.3",
    "next": "9.4.2",
    "prettier": "2.1.1",
    "react": "16.13.1",
    "typescript": "4.0.2"
  }
}
